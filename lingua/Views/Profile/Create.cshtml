@using lingua.Models.ViewModels
@model ProfileViewModel

<h1>Crear Perfil</h1>

<hr />

<div class="row">
	<div class="col-md-4">

		<h2>HOLA</h2>

		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="EnglishLevel" class="control-label"></label>
				<input asp-for="EnglishLevel" class="form-control" />
				<span asp-validation-for="EnglishLevel" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="UserId" class="control-label"></label>
				<select asp-for="UserId" asp-items="ViewBag.Users"></select>
				<span asp-validation-for="UserId" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Crear" class="btn btn-primary" />
			</div>


		</form>

	</div>

</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}